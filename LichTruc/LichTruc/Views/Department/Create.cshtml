@model LichTruc.Models.DEPARTMENT

@{
    ViewBag.Title = "Thêm phòng ban";
}

<h2>Thêm phòng ban</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label>Mã phòng</label>
        @Html.TextBoxFor(m => m.dept_code, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Tên phòng</label>
        @Html.TextBoxFor(m => m.dept_name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Mã phòng cha (nếu có)</label>
        @Html.TextBoxFor(m => m.parent_dept_id, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Hoạt động</label>
        @Html.CheckBox("is_active", Model.is_active ?? true) Hoạt động
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
    @Html.ActionLink("Hủy", "Index", null, new { @class = "btn btn-secondary" })
}
