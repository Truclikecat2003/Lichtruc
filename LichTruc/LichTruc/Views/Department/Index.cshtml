@model List<LichTruc.Models.DEPARTMENT>

@{
    ViewBag.Title = "Danh sách phòng ban";
}

<h2>Danh sách phòng ban</h2>

<p>
    @Html.ActionLink("Thêm mới phòng ban", "Create", null, new { @class = "btn btn-success" })
</p>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Mã phòng</th>
            <th>Tên phòng</th>
            <th>Phòng cha</th>
            <th>Trạng thái</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dept in Model)
        {
            <tr>
                <td>@dept.dept_code</td>
                <td>@dept.dept_name</td>
                <td>@dept.parent_dept_id</td>
                <td>@((dept.is_active ?? false) ? "Hoạt động" : "Không hoạt động")</td>
                <td>
                    @Html.ActionLink("Chi tiết", "Details", new { id = dept.dept_id }, new { @class = "btn btn-sm btn-info" }) |
                    @Html.ActionLink("Sửa", "Edit", new { id = dept.dept_id }, new { @class = "btn btn-sm btn-primary" }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = dept.dept_id }, new { @class = "btn btn-sm btn-danger" })
                </td>

            </tr>
        }
    </tbody>
</table>
