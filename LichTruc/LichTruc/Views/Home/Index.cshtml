@model IEnumerable<LichTruc.Models.ScheduleViewModel>

@{
    ViewBag.Title = "Danh sách lịch trực";
    int roleId = Session["RoleID"] != null ? (int)Session["RoleID"] : 0;
}

<h2>Danh sách lịch trực</h2>

@if (roleId == 1 || roleId == 3)
{
    <div class="mb-3">
        @Html.ActionLink("➕ Thêm lịch trực", "Create", "Schedule", null, new { @class = "btn btn-primary" })
    </div>
}

@using (Html.BeginForm("ExportMultiple", "Schedule", FormMethod.Post, new { target = "_blank" }))
{
    <div class="mb-2">
        <input type="submit" name="actionType" value="ExportToPdf" class="btn btn-danger" />
        <input type="submit" name="actionType" value="ExportToExcel" class="btn btn-success" />
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th><input type="checkbox" id="select-all" /></th>
                <th>Tuần bắt đầu</th>
                <th>Tuần kết thúc</th>
                <th>Phòng ban</th>
                <th>Người tạo</th>
                <th>Trạng thái</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <input type="checkbox" name="selectedIds" value="@item.Schedule.schedule_id" />
                    </td>
                    <td>@item.Schedule.week_start_date.ToString("dd/MM/yyyy")</td>
                    <td>@item.Schedule.week_end_date.ToString("dd/MM/yyyy")</td>
                    <td>@item.DepartmentName</td>
                    <td>@item.CreatorUsername</td>
                    <td>@item.Schedule.status</td>
                    <td>
                        @Html.ActionLink("Chi tiết", "Details", "Schedule", new { id = item.Schedule.schedule_id }, new { @class = "btn btn-sm btn-info me-1" })

                        @if (roleId == 1 || roleId == 3)
                        {
                            @Html.ActionLink("Sửa", "Edit", "Schedule", new { id = item.Schedule.schedule_id }, new { @class = "btn btn-sm btn-warning me-1" })
                        }

                        @if (roleId == 1 || (roleId == 2 && item.Schedule.status == "DRAFT"))
                        {
                        @Html.ActionLink("Xóa", "Delete", "Schedule", new { id = item.Schedule.schedule_id }, new { @class = "btn btn-sm btn-danger", onclick = "return confirm('Bạn có chắc chắn muốn xóa lịch này không?');" })
                        }
                    </td>


                </tr>
            }
        </tbody>
    </table>
}

@section Scripts {
    <script>
        document.getElementById("select-all").addEventListener("change", function () {
            var checkboxes = document.querySelectorAll("input[name='selectedIds']");
            for (var checkbox of checkboxes) {
                checkbox.checked = this.checked;
            }
        });
    </script>
}
