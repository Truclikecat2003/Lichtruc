@model LichTruc.Models.EMPLOYEE

@{
    ViewBag.Title = "Thêm bác sĩ";
}

<h2>Thêm bác sĩ</h2>

@using (Html.BeginForm())
{
    @* Mã NV được sinh tự động, nên ẩn *@
    @Html.HiddenFor(m => m.emp_code)

    <div class="mb-3">
        @Html.LabelFor(m => m.full_name)
        @Html.TextBoxFor(m => m.full_name, new { @class = "form-control", placeholder = "Nhập họ tên" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.position)
        @Html.TextBoxFor(m => m.position, new { @class = "form-control", placeholder = "Nhập chức vụ" })
    </div>

    <div class="mb-3">
        @Html.Label("Phòng ban")
        @Html.DropDownList("dept_id", (SelectList)ViewBag.Departments, "-- Chọn phòng ban --", new { @class = "form-control select2" })
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
    @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-secondary ms-2" })
}

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.select2').select2({
                placeholder: "Chọn phòng ban",
                allowClear: true
            });
        });
    </script>
}
