@model List<LichTruc.Models.ROLE>

@{
    ViewBag.Title = "Danh sách vai trò";
}

<h2>Danh sách vai trò</h2>

<p>
    @Html.ActionLink("➕ Thêm vai trò", "Create", null, new { @class = "btn btn-success" })
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tên vai trò</th>
            <th>Mô tả</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.role_id</td>
                <td>@r.role_name</td>
                <td>@r.role_description</td>
                <td>
                    @Html.ActionLink("Chi tiết", "Details", new { id = r.role_id }, new { @class = "btn btn-info btn-sm" }) |
                    @Html.ActionLink("Sửa", "Edit", new { id = r.role_id }, new { @class = "btn btn-primary btn-sm" }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = r.role_id }, new { @class = "btn btn-danger btn-sm", onclick = "return confirm('Bạn có chắc chắn muốn xóa vai trò này không?');" })
                </td>
            </tr>
        }
    </tbody>
</table>
