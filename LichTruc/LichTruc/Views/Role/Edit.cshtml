@model LichTruc.Models.ROLE
@{
    ViewBag.Title = "Sửa Vai trò";
}
<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label>Tên vai trò</label>
        @Html.TextBoxFor(m => m.role_name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Mô tả</label>
        @Html.TextAreaFor(m => m.role_description, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
    @Html.ActionLink("Hủy", "Index", null, new { @class = "btn btn-secondary" })
}
