@{
    ViewBag.Title = "Tạo lịch trực";
}

<h2>@ViewBag.Title</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

@using (Html.BeginForm("Create", "Schedule", FormMethod.Post))
{
    @Html.AntiForgeryToken() <!-- Nếu bạn muốn bảo mật thêm -->

    <input type="hidden" name="dept_id" value="@ViewBag.DefaultDeptId" />
    <input type="hidden" name="created_by" value="@ViewBag.DefaultUserId" />

    <div class="form-group">
        <label>Tuần bắt đầu</label>
        <input type="date" name="week_start_date" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Tuần kết thúc</label>
        <input type="date" name="week_end_date" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Ghi chú</label>
        <textarea name="notes" class="form-control" rows="3"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Tạo lịch</button>
    @Html.ActionLink("Quay lại", "Index", "Home", null, new { @class = "btn btn-secondary ml-2" })
}
