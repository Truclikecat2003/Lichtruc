@model LichTruc.Models.SCHEDULE_DETAIL

@{
    ViewBag.Title = "Xóa ca trực";
}

<h2>Xác nhận xóa ca trực</h2>

<dl class="dl-horizontal">
    <dt>Ngày trực</dt>
    <dd>@Model.duty_date.ToString("dd/MM/yyyy")</dd>

    <dt>Ca</dt>
    <dd>@Model.shift_time</dd>

    <dt>Loại trực</dt>
    <dd>@Model.duty_type</dd>

    <dt>Bác sĩ ID</dt>
    <dd>@Model.emp_id</dd>
</dl>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a href="@Url.Action("Details", "Schedule", new { id = Model.schedule_id })" class="btn btn-secondary">Hủy</a>
}
